<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <link rel="stylesheet" href="<%= basePath %>/css/main.css" />
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet" />
    </head>
    <body>
        <%- include('partials/header') %>

        <main class="content-section">
            <h1>User Profile: <%= user %></h1>

            <div class="grid-container grid-auto-fit margin-top-30">
                <div class="card card-stat" style="border-color: var(--primary)">
                    <h3 class="stat-label">Total Workouts</h3>
                    <p class="stat-value"><%= stats.totalWorkouts %></p>
                </div>

                <div class="card card-stat" style="border-color: var(--accent)">
                    <h3 class="stat-label">Calories Burned</h3>
                    <p class="stat-value"><%= stats.totalCalories %></p>
                </div>

                <div class="card card-stat" style="border-color: #ff6b6b">
                    <h3 class="stat-label">Active Minutes</h3>
                    <p class="stat-value"><%= stats.totalDuration %></p>
                </div>
            </div>

            <div class="margin-top-40">
                <h2>Recent Activity</h2>
                <% if (recentActivity.length > 0) { %>
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Activity</th>
                            <th>Duration</th>
                            <th>Calories</th>
                            <th>Intensity</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% recentActivity.forEach(function(activity) { %>
                        <tr>
                            <td><%= new Date(activity.date).toLocaleDateString() %></td>
                            <td><%= activity.activity_type %></td>
                            <td><%= activity.duration %> min</td>
                            <td><%= activity.calories_burned %></td>
                            <td>
                                <span style="padding: 4px 8px; border-radius: 4px; background: #444; font-size: 0.8rem"
                                    ><%= activity.intensity || 'N/A' %></span
                                >
                            </td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
                <% } else { %>
                <p class="text-muted">No recent activity found.</p>
                <% } %>
            </div>

            <div style="margin-top: 40px; text-align: center">
                <a href="<%= basePath %>/users/logout" class="btn-cta btn-danger">Logout</a>
            </div>
        </main>
    </body>
</html>
