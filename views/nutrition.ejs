<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title><%= title %></title>
        <link rel="stylesheet" href="<%= basePath %>/css/main.css" />
        <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;600&display=swap" rel="stylesheet" />
    </head>
    <body>
        <%- include('partials/header') %>

        <section class="content-section">
            <h1>Nutrition Tracker</h1>
            <p>Type what you ate to get nutrition info. e.g., "1 banana and 2 eggs"</p>

            <form action="<%= basePath %>/fitness/nutrition/analyze" method="POST" class="styled-form">
                <div class="form-group">
                    <label for="query">What did you eat?</label>
                    <textarea name="query" id="query" rows="3" required class="input-dark">
<%= typeof query !== 'undefined' ? query : '' %></textarea
                    >
                </div>
                <button type="submit" class="btn-cta">Analyze Food</button>
            </form>
        </section>

        <% if (analysis && analysis.items && analysis.items.length > 0) { %>
        <section class="content-section" style="padding-top: 0">
            <h2 style="color: var(--accent); margin-bottom: 20px">Analysis Results</h2>

            <div class="card margin-bottom-20">
                <table class="data-table">
                    <thead>
                        <tr>
                            <th>Item</th>
                            <th>Calories</th>
                            <th>Protein (g)</th>
                            <th>Fat (g)</th>
                            <th>Carbs (g)</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% let totalCal = 0, totalPro = 0, totalFat = 0, totalCarb = 0; %> <%
                        analysis.items.forEach(function(item) { totalCal += item.calories; totalPro += item.protein_g;
                        totalFat += item.fat_total_g; totalCarb += item.carbohydrates_total_g; %>
                        <tr>
                            <td><%= item.name %></td>
                            <td><%= item.calories %></td>
                            <td><%= item.protein_g %></td>
                            <td><%= item.fat_total_g %></td>
                            <td><%= item.carbohydrates_total_g %></td>
                        </tr>
                        <% }); %>
                        <tr style="font-weight: bold; background: rgba(108, 99, 255, 0.1)">
                            <td>TOTAL</td>
                            <td><%= totalCal.toFixed(1) %></td>
                            <td><%= totalPro.toFixed(1) %></td>
                            <td><%= totalFat.toFixed(1) %></td>
                            <td><%= totalCarb.toFixed(1) %></td>
                        </tr>
                    </tbody>
                </table>

                <form action="<%= basePath %>/fitness/nutrition/log" method="POST" class="text-right margin-top-20">
                    <input type="hidden" name="meal_name" value="<%= query %>" />
                    <input type="hidden" name="calories" value="<%= totalCal %>" />
                    <input type="hidden" name="protein" value="<%= totalPro %>" />
                    <input type="hidden" name="fat" value="<%= totalFat %>" />
                    <input type="hidden" name="carbs" value="<%= totalCarb %>" />
                    <button
                        type="submit"
                        class="btn-login"
                        style="background: var(--accent); color: #000; border: none; font-weight: bold"
                    >
                        Save to Daily Log
                    </button>
                </form>
            </div>
        </section>
        <% } %> <% if (history && history.length > 0) { %>
        <section class="content-section">
            <h2>Recent Meals</h2>
            <div class="grid-container grid-gap-15">
                <% history.forEach(function(log) { %>
                <div class="card flex-between-center">
                    <div>
                        <h4 class="text-white margin-bottom-10"><%= log.meal_name %></h4>
                        <span class="stat-label"><%= new Date(log.date).toLocaleTimeString() %></span>
                    </div>
                    <div class="text-right">
                        <span class="text-accent" style="font-weight: bold; font-size: 1.1rem"
                            ><%= Math.round(log.calories) %> kcal</span
                        ><br />
                        <span class="stat-label" style="font-size: 0.8rem"
                            >P: <%= Math.round(log.protein) %>g | C: <%= Math.round(log.carbs) %>g | F: <%=
                            Math.round(log.fat) %>g</span
                        >
                    </div>
                </div>
                <% }); %>
            </div>
        </section>
        <% } %>
    </body>
</html>
